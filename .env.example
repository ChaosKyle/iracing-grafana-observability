# Local Environment Configuration
# Copy this file to .env and fill in your values

# iRacing API Credentials
IRACING_USERNAME=your_iracing_username
IRACING_PASSWORD=your_iracing_password

# PostgreSQL Configuration
# For Docker Compose setup, use "postgres" as the host
# For local setup, use "localhost"
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password
POSTGRES_DB=iracing_data

# InfluxDB Configuration
# For Docker Compose setup, use "http://influxdb:8086" as the URL
# For local setup, use "http://localhost:8086"
INFLUXDB_URL=http://influxdb:8086
INFLUXDB_TOKEN=your_influxdb_token
INFLUXDB_ORG=iracing
INFLUXDB_BUCKET=iracing_telemetry
INFLUXDB_ADMIN_USER=admin
INFLUXDB_ADMIN_PASSWORD=your_secure_password

# Optional: RaceLabs Telemetry directory for offline telemetry processing
# RACELABS_TELEMETRY_DIR=/path/to/racelabs/telemetry

# Optional: Grafana configuration
# GRAFANA_ADMIN_USER=admin
# GRAFANA_ADMIN_PASSWORD=admin

# Optional: Ports (if you need to change from defaults)
# GRAFANA_PORT=3000
# POSTGRES_EXTERNAL_PORT=5432
# INFLUXDB_PORT=8086